<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Initial_Create_Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Select an account type:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_supporter_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Supporter Account"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/create_owner_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Owner Account"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:text="A Supporter Account is for consumers who wish to use ProxyPal to browse and interact with local shops and businesses. "
        app:layout_constraintEnd_toEndOf="@+id/create_supporter_btn"
        app:layout_constraintStart_toStartOf="@+id/create_supporter_btn"
        app:layout_constraintTop_toBottomOf="@+id/create_supporter_btn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:text="An Owner Account is for business owners who want to create a profile that will be displayed to customers."
        app:layout_constraintEnd_toEndOf="@+id/create_owner_btn"
        app:layout_constraintStart_toStartOf="@+id/create_owner_btn"
        app:layout_constraintTop_toBottomOf="@+id/create_owner_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>